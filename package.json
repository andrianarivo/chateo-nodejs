{
  "name": "chateo-backend",
  "version": "1.1.3",
  "description": "web application that allows users to chat with each other in real-time. It is built with Next.js, Node.js, GraphQL and PostgreSQL.",
  "main": "src/index.ts",
  "scripts": {
    "start:ts": "ts-node src/index.ts",
    "start:js": "node dist/index.js",
    "dev": "dotenv -- ts-node-dev --exit-child --respawn src/index.ts",
    "build": "babel src --out-dir dist --extensions \".ts\" --source-maps inline",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "test": "dotenv -e .env.test -- jest",
    "test:ci": "dotenv -- jest",
    "test:watch": "dotenv -e .env.test -- jest --watch --runInBand",
    "prepare": "husky install",
    "db:migrate": "dotenv -- npx prisma migrate dev",
    "db:test:migrate": "dotenv -e .env.test -- npx prisma migrate dev"
  },
  "devDependencies": {
    "@babel/cli": "^7.23.0",
    "@babel/core": "^7.23.2",
    "@babel/preset-env": "^7.23.2",
    "@babel/preset-typescript": "^7.23.2",
    "@faker-js/faker": "^8.2.0",
    "@types/debug": "^4.1.12",
    "@types/express-session": "^1.17.10",
    "@types/jest": "^27.5.2",
    "@types/node": "17.0.36",
    "@types/passport": "^1.0.16",
    "@types/passport-jwt": "^4.0.0",
    "@types/passport-local": "^1.0.38",
    "eslint": "^8.7.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^26.1.4",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "husky": "^8.0.0",
    "jest": "^27.5.1",
    "lint-staged": "^12.4.0",
    "prettier": "^2.6.2",
    "supertest": "^6.2.1",
    "ts-jest": "^27.1.5",
    "ts-node": "10.9.2",
    "ts-node-dev": "2.0.0",
    "tsc-alias": "^1.6.5",
    "tsconfig-paths": "^3.14.1",
    "typescript": "^4.6.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andrianarivo/chateo-nodejs.git"
  },
  "keywords": [
    "node",
    "graphql",
    "gql",
    "apollo",
    "api",
    "typescript",
    "postgresql"
  ],
  "author": "David Stanley",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/andrianarivo/chateo-nodejs/issues"
  },
  "homepage": "https://github.com/andrianarivo/chateo-nodejs/blob/dev/README.md",
  "dependencies": {
    "@graphql-tools/executor-http": "^1.0.6",
    "@graphql-tools/schema": "^10.0.2",
    "@graphql-yoga/plugin-jwt": "^2.1.2",
    "@pothos/core": "^3.38.0",
    "@pothos/plugin-prisma": "^3.61.0",
    "@prisma/client": "^5.5.0",
    "@types/ip": "^1.1.3",
    "@types/node-forge": "^1.3.11",
    "bcryptjs": "^2.4.3",
    "debug": "^4.3.4",
    "graphql": "^16.8.1",
    "graphql-scalars": "^1.22.4",
    "graphql-yoga": "5.1.1",
    "ip": "^1.1.8",
    "jsonwebtoken": "^9.0.2",
    "node-forge": "^1.3.1"
  }
}
